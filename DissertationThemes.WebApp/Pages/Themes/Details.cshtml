@page
@model DissertationThemes.WebApp.Pages.Themes.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
    .dl-horizontal dt {
        width: 250px;
    }

    .dl-horizontal dd {
        margin-left: 260px;
    }
</style>
<h2>Detaily</h2>

<div>
    <h4>Dizertačná práca</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id témy
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Themes.Id)
        </dd>
        <dt>
            Názov témy
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Themes.Name)
        </dd>
        <dt>
            Denné štúdium
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Themes.IsFullTimeStudy)
        </dd>
        <dt>
            Externé štúdium
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Themes.IsExternalStudy)
        </dd>
        <dt>
            Školiteľ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Supervisor.FullName)
        </dd>
        <dt>
            Štúdijný program
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StProgram.Name)
        </dd>
        <dt>
            Štúdijný odbor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StProgram.FieldOfStudy)
        </dd>
        <dt>
            Typ výskumu
        </dt>
        <dd id="typeRes">
            @Html.DisplayFor(model => model.resType)
        </dd>
        <dt>
            Popis
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Themes.Description)
        </dd>
        <dt>
            Datum vytvorenia
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Themes.Created)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Themes.Id">Editovať</a> |
    <a asp-page="./Index">Naspäť na list</a>
</div>
