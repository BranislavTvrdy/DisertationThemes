@page
@model DissertationThemes.WebApp.Pages.StPrograms.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
    .dl-horizontal dt {
        width: 250px;
    }

    .dl-horizontal dd {
        margin-left: 260px;
    }
</style>
<h2>Detaily</h2>

<div>
    <h4>Študijný program</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StPrograms.Id)
        </dd>
        <dt>
            Názov študijného programu@*@Html.DisplayNameFor(model => model.StPrograms.Name)*@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StPrograms.Name)
        </dd>
        <dt>
            Názov študijného odboru@*@Html.DisplayNameFor(model => model.StPrograms.FieldOfStudy)*@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StPrograms.FieldOfStudy)
        </dd>
        <dt>
            Vypísané témy
        </dt>
        <dd>
            @foreach (var item in Model.StPrograms.Themes)
            {
                <dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.Name)
                    </dd>
                </dt>
            }
        </dd>
        </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.StPrograms.Id">Editovať</a> |
    <a asp-page="./Index">Naspäť na list</a>
</div>
